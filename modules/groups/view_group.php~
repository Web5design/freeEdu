<?php
require_once '../modules/groups/group.php';
require_once '../modules/groups/post.php';
$id=$_GET['id'];
viewGroup($id);
function viewGroup($oid)
{
     

	$g=new Group();
	$row = $g -> find($oid);
	echo "<form method='post' accept-charset='UTF-8' enctype='multipart/form-data' align='center'>";
	echo "<fieldset width=500 align=center><legend><h2>".$row['name']."</h2></legend>";
	echo "<table>";
   	echo "<tr><img src='../".$row['imguri']."' align=left width='200' height='200'/>";
    echo "<td>Subject :</td><td>&nbsp&nbsp<input type=text name=subject ></td>";
    echo "<tr><td>Body &nbsp&nbsp&nbsp&nbsp:</td><td>&nbsp&nbsp<textarea name=post width=300px></textarea></td>";
    echo "<td><input type=submit name= submit></td></tr>";
    echo "</table></fieldset></form>";
   
	$id=$_GET['id'];  
    $p=new Post();
  	$arr=$p->posts_by_group($id);   
    for($i=0;$i<count($arr);$i++)
	{   
		$id = $arr[$i]["id"];
		echo "<center><fieldset style='width:100'><legend><h2>".$arr[$i]["subject"]."</h2></legend>
			<table><tr><td size='30'>".$i."
			<br>
			".$arr[$i]["post"]."
			</td>
            </tr></table></fieldset></center>";
               

	}
           	    

   if(isset($_POST["submit"]))
    {
		
    	$oid=getCurrentObject();
       	$subject=$_POST["subject"];
    	$post=$_POST["post"];
       	$date = strtotime(date("m.d.y"));

		$p = new Post();
		$p->pcreate($id,$oid,$post,$subject,$date);
		$arr=$p->post_by_group;
		notify("Successfully Posted!!!");
		echo "<center><fieldset style='width:50'><legend><h2>".$subject."</h2></legend>";
		echo "$post"; 
		echo "</fieldset></center>";

     }
     echo "Number of Posts: $i"; 

        
    }

?>
